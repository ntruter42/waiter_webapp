<div class="flex col gap justify align view container">
	<h1>{{title}}</h1>

	<form class="flex col gap center container" action="/admin/waiters/add" method="post">
		{{#if message.text}}
		<div class="fade-in center {{message.type}} message">{{message.text}}</div>
		{{/if}}

		<label for="user_name">Select type of user</label>
		<select class="flex center" type="text" name="role" id="role" autocomplete="off" required>
			<option value="admin">Admin</option>
			<option value="waiter" selected>Waiter</option>
		</select>

		<label for="full_name">Full name</label>
		<input type="text" name="full_name" id="full_name" autocomplete="off" required>

		<label for="username">Create a username</label>
		<input type="text" name="username" id="username" autocomplete="off" required>

		<label for="password">New password</label>
		<input type="password" name="password" id="password" autocomplete="off" required>

		<label for="confirm_password">Confirm new password</label>
		<input type="password" name="confirm_password" id="confirm_password" autocomplete="off" required>

		<button class="middle" type="submit">CREATE</button>

		{{!-- <div>
			<span>Already have an account? <a href="/login">Sign In</a></span>
		</div> --}}
	</form>

	<div class="invisible">I</div>
	<div class="invisible">L</div>
	<div class="invisible">Y</div>
</div>